# Database Configuration
DATABASE_URL=postgresql://exeo_user:exeo_password@localhost:5432/exeo_portal
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Redis Configuration
